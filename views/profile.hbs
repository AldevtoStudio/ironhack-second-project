<h2>User profile</h2>

<img src="{{profile.picture}}" alt="{{profile.name}}" />

<h2>{{profile.name}}</h2>

{{#if userProfile}}
  <a href="/profile/edit">Edit profile</a>
{{/if}}

{{#each cards}}
  {{#if media}}
    <img src="{{media}}" alt="" />
  {{/if}}

  <p>{{text}}</p>

  <p>{{title}}</p>

  <h5>Comments:</h5>
  {{#each comments}}
    <div>
      <b>{{this.user.name}}</b>
      <p>{{this.text}}</p>
    </div>
  {{/each}}
{{/each}}