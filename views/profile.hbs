<div>
  {{#if profile.picture}}<img
      id="profile-img"
      src="{{profile.picture}}"
      alt="{{profile.name}}"
    />
  {{/if}}

  <h2>{{profile.name}}</h2>

  {{#if userProfile}}
    <a href="/profile/edit">Edit profile</a>
  {{/if}}
</div>

{{#each cards}}
  {{#if media}}
    <img src="{{media}}" alt="" />
  {{/if}}

  <p>{{text}}</p>

  <p>{{title}}</p>
{{/each}}

<p>Total scores of your cards</p>

{{#each cards}}

  <p>{{totalScore}}</p>

  <h5>Comments:</h5>
  {{#each comments}}
    <div>
      <b>{{this.user.name}}</b>
      <p>{{this.text}}</p>
    </div>
  {{/each}}
{{/each}}