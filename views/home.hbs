{{notificationCount}}
{{#each notifications}}
  <p><a href="/profile/{{this.user._id}}">{{this.user.name}}</a>
    {{#if comment}}commented{{else}}liked{{/if}}
    your
    <a href="/meow/{{this.publication._id}}">post</a></p>
{{/each}}

{{#if card}}
  <div class="cardPublication">
    {{#if card.media}} <img src="{{card.media}}" alt="{{card.title}}" /> {{/if}}
    {{card.title}}
    {{card.text}}
    <a href="/profile/{{card.creator._id}}">{{card.creator.name}}</a>

    <div class="feedbackBtns">
      <form action="/card/{{card._id}}/like" method="POST">
        <button><img
            class="feedbackIcon"
            src="/images/home/likeIcon.png"
            alt="Like Icon"
          /></button>
      </form>

      <form action="/card/{{card._id}}/dislike" method="POST">
        <button><img
            class="feedbackIcon"
            src="/images/home/dislikeIcon.png"
            alt="Like Icon"
          /></button>
      </form>

      <form action="/card/{{card._id}}/ignore" method="POST">
        <button><img
            class="feedbackIcon"
            src="/images/home/ignoreIcon.png"
            alt="Like Icon"
          /></button>
      </form>
    </div>

    <a href=""><img
        class="commentIcon"
        src="/images/home/commentIcon.png"
        alt="Comment Icon"
      /></a>

